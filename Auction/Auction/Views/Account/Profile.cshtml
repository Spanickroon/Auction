@model Auction.Data.Models.User
@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>
<td>@Model.Email</td>
<td>@Model.FullName</td>
<td>@Model.Balance $</td>
<td>@Model.DateRegistration</td>
<td>@Model.Gender</td>
@if (Model.Avatar is null)
{
    <h5>No image</h5>
}
else
{
    <p>
        <img style='width:400px; height:600px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Avatar))" alt="" class="img-rounded" />
    </p>
}
<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

